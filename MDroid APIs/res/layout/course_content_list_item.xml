<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card"
        android:orientation="vertical" >

        <!-- Module name -->

        <TextView
            android:id="@+id/course_module_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:text="Test module heading"
            android:textSize="16sp" />

        <!-- File layout -->

        <LinearLayout
            android:id="@+id/course_file_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <!-- Dashed line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dashed_line" >
            </LinearLayout>

            <!-- File name -->

            <TextView
                android:id="@+id/course_filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Test file name.pdf"
                android:textColor="@color/grey_5"
                android:textSize="13sp" />
            <!-- File details -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="1" >

                <!-- File size -->

                <TextView
                    android:id="@+id/course_filesize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="12 MB"
                    android:textColor="@color/grey_5"
                    android:textSize="13sp" />

                <!-- File modified -->

                <TextView
                    android:id="@+id/course_file_timemodified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="23 days ago"
                    android:textColor="@color/grey_5"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Dashed line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dashed_line" >
            </LinearLayout>
        </LinearLayout>

        <!-- Module decription -->

        <TextView
            android:id="@+id/course_module_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/grey_5"
            android:text="File description goes on here. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on. It goes on and on and on."
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>