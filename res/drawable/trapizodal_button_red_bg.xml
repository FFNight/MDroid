<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Triangle -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="10dp">
        <rotate
            android:fromDegrees="-65"
            android:pivotX="28"
            android:toDegrees="-65" >
            <shape android:shape="rectangle" >
                <stroke
                    android:width="1dp"
                    android:color="@color/red_7" />

                <solid android:color="@color/blue_1" />
            </shape>
        </rotate>
    </item>

    <!-- Rectangle -->
    <item android:left="16dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/blue_1" />
        </shape>
    </item>

    <!-- Border top -->

    <item
        android:bottom="34dp"
        android:left="16dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/red_7" />
        </shape>
    </item>

    <!-- Border bottom -->

    <item
        android:left="0dp"
        android:top="34dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/red_7" />
        </shape>
    </item>

    <!-- Border right -->

    <item
        android:left="149dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/red_7" />
        </shape>
    </item>

</layer-list>