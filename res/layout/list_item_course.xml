<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E2E2E2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/clickable_card"
        android:orientation="vertical"
        android:paddingBottom="0dp" >

        <TextView
            android:id="@+id/list_course_shortname"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="start|center_vertical"
            android:padding="3dp"
            android:text="CS 101-2013-1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_course_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:padding="3dp"
            android:text="Introduction to computer science"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/list_course_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/list_course_summary"
                android:textColor="@color/grey8"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_course_summary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey8"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/list_course_more_button"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:clickable="true"
            android:contentDescription="@string/drawer_open"
            android:src="@drawable/expand_more_grey" />
    </LinearLayout>

</LinearLayout>