<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp" >

    <LinearLayout
        android:id="@+id/forum_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="0.5dp"
        android:paddingRight="0.5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/clickable_card"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/forum_thread_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.91"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="@string/forum_thread_subject"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/forum_reply_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.09"
                    android:lines="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="5dp"
                    android:paddingTop="8dp"
                    android:text="@string/forum_reply_count"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/grey" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/forum_author"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:paddingLeft="8dp"
                    android:text="@string/forum_user_name"
                    android:textColor="@color/trasp_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/forum_date_posted"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:paddingRight="8dp"
                    android:text="@string/forum_date_posted"
                    android:textColor="@color/trasp_grey"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>