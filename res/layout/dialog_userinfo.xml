<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/default_card"
    android:gravity="center_horizontal"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_userinfo_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beautiful_blue"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/white"
            android:textSize="72sp" />

        <TextView
            android:id="@+id/dialog_userinfo_user_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="top"
            android:background="@color/transparent_black"
            android:lines="1"
            android:padding="5dp"
            android:text="Praveen Kumar Pendyala"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Phone number -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_phone" />

                <TextView
                    android:id="@+id/dialog_userinfo_user_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="+1 839-876-5432"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Email -->

            <LinearLayout
                android:id="@+id/dialog_userinfo_layout_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_gmail" />

                <TextView
                    android:id="@+id/dialog_userinfo_user_email"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="praveendath92@gmail.com"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Skype -->

            <LinearLayout
                android:id="@+id/dialog_userinfo_layout_skype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_skype" />

                <TextView
                    android:id="@+id/dialog_userinfo_user_skype"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="praveendath92"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Url -->

            <LinearLayout
                android:id="@+id/dialog_userinfo_layout_url"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/public_net" />

                <TextView
                    android:id="@+id/dialog_userinfo_user_url"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:linksClickable="true"
                    android:padding="8dp"
                    android:text="http://praveenkumar.co.in/moodle/user.php?id=2"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Location -->

            <LinearLayout
                android:id="@+id/dialog_userinfo_layout_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_place" />

                <!-- city, country -->

                <TextView
                    android:id="@+id/dialog_userinfo_user_city"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="Mumbai, India"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Postal address -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:src="@drawable/icon_mail" />

                <TextView
                    android:id="@+id/dialog_userinfo_user_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="7200 Brilgo Hills,\nHouston,\nTexas 77001"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Courses -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="0dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Courses"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey12" >
                </LinearLayout>

                <ListView
                    android:id="@+id/dialog_userinfo_user_courselist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:minHeight="150dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>